<h1>Display your Pirate here</h1>
<div class="pirate">
  <p><%= @pirate.name %></p>
  <p><%= @pirate.weight %></p>
  <p><%= @pirate.height %></p>
</div>

<h2>Display your first ship here</h2>
<% @ships.each do |ship| %>
  <div class="ship">
    <p><%= ship.name %></p>
    <p><%= ship.type %></p>
    <p><%= ship.booty %></p>
  </div>
    <% end %>


